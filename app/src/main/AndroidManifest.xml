            android:name=".LOGIN.ActivityTelaLogin"
            android:label="LOGIN" />
        <activity
            android:name=".LOGIN.ActivityTelaEsqueciSenha"
            android:label="RECUPERAR SENHA"
            android:textColor="@color/colorAccent" />
        <activity
            android:name=".ActivityTelaSplash"
            android:label="Adminiscar-Ecommerce versÃ£o 1.0">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>