<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogplus_card_shadow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_alter_imagem_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Imagem URL"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edit_alter_modelo_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Modelo"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edit_alter_cat_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Categoria"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edit_alter_diaria_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Diaria"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edit_alter_qtd_dias_produto"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Qtd_dias"
            android:textAlignment="center"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/edit_alter_pagamento_produto"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Pagamento"
            android:textAlignment="center"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/edit_alter_vl_total_produto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Valor total"
            android:textAlignment="center"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_alter_item_produto"
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginStart="55dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="431dp"
            android:background="@drawable/button_beauty_full"
            android:text="ALTERAR"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>