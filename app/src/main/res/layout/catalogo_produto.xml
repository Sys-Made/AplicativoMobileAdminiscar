<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewProduto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/dialogplus_card_shadow"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:background="@color/dialogplus_card_shadow"
        android:orientation="vertical"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_produto"
                android:layout_width="373dp"
                android:layout_height="160dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/adminiscar_mobile02"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_modelo_catalogo_produto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_beauty_full"
                    android:text="Modelo do carro"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_cat_catalogo_produto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_beauty_full"
                    android:text="Categoria"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/txt_diaria_catalogo_produto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_beauty_full"
                    android:text="Valor da diÃ¡ria"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_qtd_dias_catalogo_produto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_beauty_full"
                    android:text="Modelo do carro"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_pagamento_catalogo_produto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_beauty_full"
                    android:text="Modelo do carro"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_valor_total_catalogo_produto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/button_beauty_full"
                    android:text="Modelo do carro"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/alterar_item_produto"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:src="@drawable/alterar2"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/add_item_produto"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/carrinho2"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/deletar_item_produto"
                android:layout_width="123dp"
                android:layout_height="40dp"
                android:src="@drawable/delete2"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>