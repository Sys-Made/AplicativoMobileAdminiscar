<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo_beauty_full">


        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="119dp"
            android:layout_height="47dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_beauty_full"
            android:text="Cancelar"
            android:textColor="@color/cardview_light_background"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonEntrar"
            app:layout_constraintTop_toBottomOf="@+id/txtSenhaLogLayout" />

        <ImageView
            android:id="@+id/logo_login"
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="126dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/adminiscar_mobile05"
            app:layout_constraintBottom_toTopOf="@+id/edit_email_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_email_login"
            android:layout_width="307dp"
            android:layout_height="47dp"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/button_beauty_full02"
            android:drawableRight="@drawable/ic_email"
            android:ems="10"
            android:hint="Digite seu email:"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:padding="15dp"
            android:textAlignment="textStart"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/txtSenhaLogLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_login" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtSenhaLogLayout"
            android:layout_width="314dp"
            android:layout_height="61dp"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonEntrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_email_login"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_senha_login"
                android:layout_width="306dp"
                android:layout_height="46dp"
                android:background="@drawable/button_beauty_full02"
                android:ems="10"
                android:hint="Digite sua senha:"
                android:inputType="numberPassword"
                android:maxLength="8"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="14sp">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonEntrar"
            android:layout_width="119dp"
            android:layout_height="47dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_beauty_full"
            android:text="Entrar"
            android:textColor="@color/cardview_light_background"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"
            app:layout_constraintEnd_toStartOf="@+id/buttonCancelar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSenhaLogLayout" />

        <Button
            android:id="@+id/buttonFacebook"
            android:layout_width="276dp"
            android:layout_height="47dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bt_facebook"
            android:text="        ENTRAR COM O FACEBOOK"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/txtEsqueciSenha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />

        <Button
            android:id="@+id/buttonChamaTelaConta"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/button_beauty_full"
            android:text="CADASTRE-SE"
            android:textColor="@color/cardview_light_background"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textViewVersao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="248dp"
            android:layout_height="27dp"
            android:layout_marginStart="82dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="1dp"
            android:clickable="false"
            android:text="AINDA NÃO TEM LOGIN?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonChamaTelaConta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtEsqueciSenha" />

        <TextView
            android:id="@+id/txtEsqueciSenha"
            android:layout_width="285dp"
            android:layout_height="29dp"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="63dp"
            android:layout_marginBottom="22dp"
            android:clickable="true"
            android:text="Esqueci a senha"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/cardview_light_background"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonFacebook" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="109dp"
            android:layout_height="102dp"
            android:layout_marginStart="151dp"
            android:layout_marginEnd="151dp"
            android:background="@drawable/adminiscar_mobile"
            android:indeterminateTint="@color/White"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/buttonFacebook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonEntrar" />

        <TextView
            android:id="@+id/textViewVersao"
            android:layout_width="303dp"
            android:layout_height="40dp"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="sans-serif-black"
            android:text="Adminiscar Mobile versão 1.0"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonChamaTelaConta" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>