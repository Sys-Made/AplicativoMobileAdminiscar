<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogplus_card_shadow"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PRODUTO.ActivityInserirProduto">


    <EditText
        android:id="@+id/edit_modelo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Modelo"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_combustivel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Combustível"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_diaria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Valor da diária"
        android:textColor="#000"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/edit_imagem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Imagem"
        android:textColor="#000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_beauty_full"
        android:text="Cadastrar Item"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_beauty_full"
        android:text="voltar"
        android:textSize="20sp" />


</androidx.appcompat.widget.LinearLayoutCompat>