<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_beauty_full">

  <TextView
      android:id="@+id/textViewInserirProduto"
      android:layout_width="386dp"
      android:layout_height="39dp"
      android:layout_marginStart="3dp"
      android:layout_marginTop="105dp"
      android:layout_marginEnd="4dp"
      android:layout_marginBottom="685dp"
      android:background="@drawable/imagem_circular3"
      android:fontFamily="sans-serif"
      android:text="ESCOLHA A FORMA DE PAGAMENTO"
      android:textAlignment="center"
      android:textColor="@android:color/holo_orange_light"
      android:textSize="22sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.appcompat.widget.LinearLayoutCompat

      android:layout_width="380dp"
      android:layout_height="317dp"
      android:layout_marginStart="6dp"
      android:layout_marginTop="191dp"
      android:layout_marginEnd="7dp"
      android:layout_marginBottom="321dp"
      android:background="@drawable/button_beauty_full04"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:context=".CRUD.ActivityInserirProduto">


    <EditText
        android:id="@+id/edit_modelo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Modelo"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_categoria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Categoria"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_diaria"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Valor da diÃ¡ria"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/edit_imagem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Imagem"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />


  </androidx.appcompat.widget.LinearLayoutCompat>

  <Button
      android:id="@+id/bt_cadastrar"
      android:layout_width="200dp"
      android:layout_height="51dp"
      android:layout_marginStart="96dp"
      android:layout_marginTop="534dp"
      android:layout_marginEnd="97dp"
      android:layout_marginBottom="244dp"
      android:background="@drawable/imagem_circular"
      android:text="Cadastrar Item"
      android:textAlignment="center"
      android:textColor="@android:color/holo_orange_light"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/bt_voltar"
      android:layout_width="112dp"
      android:layout_height="47dp"
      android:layout_marginStart="140dp"
      android:layout_marginTop="626dp"
      android:layout_marginEnd="141dp"
      android:layout_marginBottom="156dp"
      android:background="@drawable/imagem_circular"
      android:text="voltar"
      android:textAlignment="center"
      android:textColor="@android:color/holo_orange_light"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>